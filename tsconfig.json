{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "commonjs",
    "types": [
      "@types/node",
      "@types/jest"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
